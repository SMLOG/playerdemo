<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.nurmemet.nur.nurvideoplayer.TvVideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#80000000"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:stateListAnimator="@null"
        android:visibility="gone"
        android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:nextFocusDown="@id/rv_tab"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.usbtv.demo.view.FocusRecyclerView
            android:id="@+id/rv_game_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rv_tab"
            android:nextFocusUp="@id/rv_tab"
            android:nextFocusDown="@id/mNavigationLinearLayout_id"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_tab"
            />

        <com.usbtv.demo.view.widget.NavigationLinearLayout
            android:id="@+id/mNavigationLinearLayout_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@id/rv_game_list"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:descendantFocusability="afterDescendants"
            android:nextFocusUp="@id/rv_game_list"
            app:home_DefaultPos="1"
            app:home_EnlargeRate="1.3"
            app:home_FontColorLight="#cc0033"
            app:home_FontColorNormal="#4EEE94"
            app:home_FontColorSelect="#7777FF"
            app:home_FontSize="8sp"
            app:home_ItemSpace="20dp"
            app:home_OrderMode="self"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_game_list"
            />
    </RelativeLayout>


</RelativeLayout>

